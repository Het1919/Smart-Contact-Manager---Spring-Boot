console.log("This is Script File");

const toggleSidebar = () =>{
	
	if($(".sidebar").is(":visible")){
		//bandh Karna hain
		$(".sidebar").css("display","none");
		$(".content").css("margin-left","1%");
	}else{
		//show karna hain
		$(".sidebar").css("display","block");
		$(".content").css("margin-left","20%");
	}
}

const search = ()=>{
	let query = $("#search-input").val();
	if(query == ""){
		$(".search-result").hide();
	}else{
		//search
		$(".search-result").show();
		
	}
}